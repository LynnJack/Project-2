<body>
  <div class="itemcontainer">

  <div class="available">
    <h2> <%=@item.name %> </h2>

    <p> This <%= @item.name %> is <%= @item.status %> and ready for pick-up from your neighbor at Unit <%= @item.user.unit %>.  Please change status to Unavailable and click "Borrow this item".  Please click here to send an email to your neighbor to schedule a pick up time.
    </p>

      <%= form_for @item do |f| %>
        <%= f.label :name %> <%= f.text_field :name %><br>
        Status: <%= f.select :status, [['Available', 'Available'], ['Unavailable', 'Unavailable']] %><br>
        <%= f.submit "Borrow this item" %>
      <% end %>

          <%= link_to "Back to Share List!", items_path %>
          <%= link_to "Delete your item from the Share List!", @item, method: :delete %>      
  </div>
</div>
</body>
